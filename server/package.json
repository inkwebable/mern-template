{
  "name": "inkwebable-mern-server",
  "version": "2.0.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "description": "inkwebable-mern-server",
  "main": "server.js",
  "scripts": {
    "start": "node -r esm server.js dotenv/config . dotenv_config_path=./.env",
    "server": "nodemon -r esm server.js dotenv/config . dotenv_config_path=./.env",
    "client": "npm run start --prefix ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test jest --run-in-band --config ./jest.config.json",
    "watch": "cross-env NODE_ENV=test jest --watch --run-in-band --config ./jest.config.json",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix ../client && npm run build --prefix ../client"
  },
  "author": "Thien",
  "private": true,
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-jwt-permissions": "^1.3.3",
    "express-mongo-sanitize": "^2.0.0",
    "express-validation": "^3.0.5",
    "express-validator": "^6.5.0",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.18",
    "nodemailer": "^6.4.16",
    "nodemon": "^2.0.12",
    "path": "^0.12.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@jest/globals": "^26.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.0.1",
    "mongodb-memory-server": "^6.6.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  }
}
